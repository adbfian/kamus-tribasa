<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.bafika.adbfian.tribasaapp.DetailActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/material_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/batas_5">

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="@dimen/batas_10"
            android:layout_marginRight="@dimen/batas_10"
            android:layout_marginTop="@dimen/batas_5"
            android:layout_marginBottom="@dimen/batas_5"
            card_view:cardBackgroundColor="@color/white"
            card_view:cardCornerRadius="5dp"
            card_view:contentPadding="3dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/voiceIndo"
                    android:layout_width="@dimen/icon_72"
                    android:layout_height="@dimen/icon_72"
                    android:layout_marginRight="@dimen/batas_3"
                    android:background="@drawable/ic_play_circle_filled_black_24dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/batas_3"
                    android:padding="@dimen/batas_3">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/bahasaIndonesia"
                        android:textSize="8pt"/>
                    <TextView
                        android:id="@+id/detilIndo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/app_name"
                        android:textSize="11pt"
                        android:gravity="center"
                        android:textColor="@color/colorTextPrimary"/>

                </LinearLayout>

            </LinearLayout>

            </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view1"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="@dimen/batas_10"
            android:layout_marginRight="@dimen/batas_10"
            android:layout_marginTop="@dimen/batas_5"
            android:layout_marginBottom="@dimen/batas_5"
            card_view:cardBackgroundColor="@color/white"
            card_view:cardCornerRadius="5dp"
            card_view:contentPadding="3dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/voiceKromo"
                    android:layout_width="@dimen/icon_72"
                    android:layout_height="@dimen/icon_72"
                    android:layout_marginRight="@dimen/batas_3"
                    android:background="@drawable/ic_play_circle_filled_black_24dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/batas_3"
                    android:padding="@dimen/batas_3">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/bahasaKromo"
                        android:textSize="8pt"/>
                    <TextView
                        android:id="@+id/detilKromo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/app_name"
                        android:textSize="11pt"
                        android:gravity="center"
                        android:textColor="@color/colorTextPrimary"/>

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view2"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="@dimen/batas_10"
            android:layout_marginRight="@dimen/batas_10"
            android:layout_marginTop="@dimen/batas_5"
            android:layout_marginBottom="@dimen/batas_5"
            card_view:cardBackgroundColor="@color/white"
            card_view:cardCornerRadius="5dp"
            card_view:contentPadding="3dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/voiceNgoko"
                    android:layout_width="@dimen/icon_72"
                    android:layout_height="@dimen/icon_72"
                    android:layout_marginRight="@dimen/batas_3"
                    android:background="@drawable/ic_play_circle_filled_black_24dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/batas_3"
                    android:padding="@dimen/batas_3">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/bahasaNgoko"
                        android:textSize="8pt"/>
                    <TextView
                        android:id="@+id/detilNgoko"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/app_name"
                        android:textSize="11pt"
                        android:gravity="center"
                        android:textColor="@color/colorTextPrimary"/>

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</LinearLayout>
