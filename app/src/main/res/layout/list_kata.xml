<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="65dp" android:layout_marginTop="@dimen/batas_5"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/batas_3">

        <ImageView
            android:id="@+id/list_icon"
            android:layout_width="@dimen/icon_48"
            android:layout_height="@dimen/icon_48"
            android:src="@drawable/ic_play_circle_filled_black_24dp"
            android:foregroundGravity="left"
            android:layout_marginLeft="15dp"
            />

        <TextView
            android:id="@+id/list_kata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Judul Data"
            android:layout_toRightOf="@id/list_icon"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="5dp"
            android:textSize="18sp"
            android:textColor="#000000"
            />


    </RelativeLayout>

</LinearLayout>